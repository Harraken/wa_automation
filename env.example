# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://wa_user:wa_password@localhost:5432/wa_provisioner

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=change_this_to_a_strong_random_secret
JWT_EXPIRES_IN=7d

# Agent WebSocket Authentication
AGENT_AUTH_SECRET=change_this_to_another_strong_secret

# SMS-MAN Integration
# Get your token from https://sms-man.com/
SMSMAN_TOKEN=YOUR_SMSMAN_TOKEN_HERE
SMSMAN_API_URL=https://api.sms-man.com/control
SMSMAN_POLL_INTERVAL_MS=4000
SMSMAN_POLL_TIMEOUT_MS=1800000
SMSMAN_DEFAULT_COUNTRY=germany

# OnlineSim Integration (Primary Provider)
# Get your API key from https://onlinesim.io/
ONLINESIM_API_KEY=YOUR_ONLINESIM_API_KEY_HERE
ONLINESIM_BASE_URL=https://onlinesim.io/api
ONLINESIM_POLL_INTERVAL_MS=3000
ONLINESIM_POLL_TIMEOUT_MS=180000
ONLINESIM_DEFAULT_COUNTRY=United States

# Emulator Configuration
EMULATOR_IMAGE=budtmo/docker-android:emulator_13.0
EMULATOR_BASE_VNC_PORT=5900
EMULATOR_BASE_APPIUM_PORT=4723
EMULATOR_BASE_ADB_PORT=5555

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./data/snapshots
SNAPSHOT_FORMAT=tar.gz

# Playwright (for WhatsApp Web linking)
PLAYWRIGHT_ENABLED=true
PLAYWRIGHT_IMAGE=mcr.microsoft.com/playwright:v1.40.0-focal

# Optional Features
LINK_TO_WEB_DEFAULT=false
OCR_ENABLED=true

# Monitoring
PROM_PORT=9091
LOG_LEVEL=info

# Docker Network (for spawned containers)
DOCKER_NETWORK=wa-provisioner-network

# Admin API
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Ss123456

# Rate Limiting
PROVISION_RATE_LIMIT_PER_HOUR=10



